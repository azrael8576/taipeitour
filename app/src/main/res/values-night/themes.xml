<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <!-- To see how these attributes are used, please visit https://material.io/develop/android/theming/color/ -->
    <style name="Base.Theme.TravelTaipei" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/traveltaipei_white</item>
        <item name="colorPrimaryVariant">@color/traveltaipei_gray_50</item>
        <item name="colorOnPrimary">@color/traveltaipei_white</item>
        <item name="colorPrimaryDark">@color/traveltaipei_green_900</item>
        <item name="colorOnSurface">@color/traveltaipei_black</item>
        <item name="colorAccent">@color/traveltaipei_gray_50</item>
        <item name="colorSurface">@color/traveltaipei_black</item>
        <item name="colorSecondary">@color/traveltaipei_black</item>
        <item name="android:colorBackground">@color/traveltaipei_white</item>
    </style>

    <style name="Theme.TravelTaipei" parent="Base.Theme.TravelTaipei"/>

    <style name="Theme.TravelTaipei.NoActionBar">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="Theme.TravelTaipei.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="TextAppearance.TravelTaipei.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <!--預設文字樣式 移除原生padding-->
    <style name="NoPaddingTextView" parent="TextAppearance.AppCompat">
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>